"use client";

import Image from "next/image";
import { Card, CardContent } from "@/components/ui/card";
import type { Feature } from "@/lib/supabase/types";
import { cn } from "@/lib/utils";

interface FeaturesSectionProps {
  features: Feature[];
}

export function FeaturesSection({ features }: FeaturesSectionProps) {
  if (!features || features.length === 0) {
    return null;
  }

  return (
    <section className="py-16 md:py-24 bg-background">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="text-center mb-12">
          <h2 className="text-3xl md:text-4xl font-bold mb-4">Our Features</h2>
          <p className="text-lg text-muted-foreground max-w-2xl mx-auto">
            Discover what makes ePharmatica the leading pharmaceutical knowledge platform
          </p>
        </div>

        {/* Features Grid */}
        <div className="grid grid-cols-1 gap-8">
          {features.map((feature, index) => (
            <Card
              key={feature.id}
              className={cn(
                "overflow-hidden border-0 transition-all duration-300 hover:shadow-lg group",
                "bg-primary text-primary-foreground"
              )}
            >
              <CardContent className="p-0 flex flex-col md:flex-row h-full min-h-[300px]">
                {/* Text Content - Left Side */}
                <div className="flex-1 p-8 md:p-12 flex flex-col justify-center">
                  <h3 className="text-3xl md:text-4xl font-bold mb-4">{feature.title}</h3>
                  {feature.description && (
                    <p className="text-primary-foreground/90 text-lg md:text-xl leading-relaxed">
                      {feature.description}
                    </p>
                  )}
                </div>

                {/* Image/Icon - Right Side */}
                {feature.image && (
                  <div className="md:w-1/2 relative min-h-[300px] md:min-h-full p-8 flex items-center justify-center bg-black/5">
                    <div className="relative w-full aspect-square max-w-[400px] rounded-2xl overflow-hidden border-4 border-white/20 shadow-2xl">
                      <Image
                        src={feature.image}
                        alt={feature.title}
                        fill
                        className="object-cover transition-transform duration-500 group-hover:scale-105"
                        unoptimized
                      />
                    </div>
                  </div>
                )}
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </section>
  );
}
